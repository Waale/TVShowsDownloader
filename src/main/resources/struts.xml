<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<constant name="struts.devMode" value="true" />

	<package name="tvshows-downloader" namespace="/" extends="struts-default">
		<action name="home" class="tvshowsdownloader.actions.HomeAction">
			<result name="SUCCESS">home.jsp</result>
		</action>
	</package>

	<package name="tvshows-downloader-api" namespace="/api" extends="json-default">
		<interceptors>
		    <interceptor-stack name="apiStack">
		        <interceptor-ref name="json">
		            <param name="enableSMD">true</param>
		        	<param name="noCache">true</param>
		        	<param name="excludeNullProperties">true</param>
		        </interceptor-ref>
		    </interceptor-stack>
		</interceptors>
		
		<action name="download-episodes" class="tvshowsdownloader.actions.DownloadEpisodesAction">
			<interceptor-ref name="apiStack"/>
			<result name="SUCCESS" type="json" />
		</action>
	</package>
</struts>